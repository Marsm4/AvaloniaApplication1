<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication1.MoviesPage">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<DataGrid Grid.Row="0" Name="dgMovies" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Название" Binding="{Binding Title}" />
				<DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" />
				<DataGridTextColumn Header="Режиссер" Binding="{Binding Director}" />
				<DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}" />

				<DataGridTemplateColumn Header="Действия">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<Button Content="Удалить" Click="btnDeleteMovie_Click" Tag="{Binding}"/>
								<Button Content="Редактировать" Click="btnEditMovie_Click" Tag="{Binding}"/>
								<Button Content="В корзину" Click="btnAddToBasket_Click" Tag="{Binding}" Background="Orange"/>
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>

		<Button Grid.Row="1" Content="Добавить фильм" x:Name="btnAddMovie" Click="btnAddMovie_Click"/>
	</Grid>
</UserControl>