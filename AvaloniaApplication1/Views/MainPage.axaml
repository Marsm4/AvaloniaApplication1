<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication1.MainPage">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Content="Users" Click="btnUsers_Click"/>
			<Button Content="Movies" Click="btnMovies_Click"/>
			<Button Content="Basket" Click="btnBasket_Click"/>
			<Button Content="Orders" Click="btnOrders_Click"/>
			<Button Content="Categories" Click="btnCategories_Click"/>
			<Button Content="Logout" Click="btnLogout_Click" Background="Red" Foreground="White"/>
		</StackPanel>

		<ContentControl Grid.Row="1" x:Name="ContentControl"/>
	</Grid>
</UserControl>