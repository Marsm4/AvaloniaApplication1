<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="AvaloniaApplication1.AuthWindow"
        Title="Avtorazayion"
        Width="400" Height="300"
        WindowStartupLocation="CenterScreen">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*" Margin="20">
        <TextBlock Grid.Row="0" Text="Avtorazayion" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="1" Text="Email"/>
        <TextBox Grid.Row="2" x:Name="tbEmail" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="3" Text="Parol"/>
        <TextBox Grid.Row="4" x:Name="tbPassword" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15">
            <Button Content="Exit" Click="Login_Click" Background="Green" Padding="20,5" Foreground="White"/>
            <Button Content="Registration" Click="Register_Click" Background="Blue" Padding="20,5" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>