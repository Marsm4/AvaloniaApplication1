<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication1.Views.BasketView">
    <Grid RowDefinitions="Auto, *, Auto">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Korzina filma" FontSize="16" FontWeight="Bold"/>
        </StackPanel>

        <DataGrid IsReadOnly="True"
                  Name="BasketDataGrid"
                  Grid.Row="1"
                  DoubleTapped="DataGrid_DoubleTapped">
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Spacing="10">
            <TextBlock x:Name="TotalText" VerticalAlignment="Center" FontWeight="Bold"/>
            <Button Content="clear" Click="ClearBasket_Click" Background="Red" Foreground="White" Padding="15,5"/>
 
            <Button Content="Delete" Click="DeleteButton_Click" Padding="15,5"/>
        </StackPanel>
    </Grid>
</UserControl>