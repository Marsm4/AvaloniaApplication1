<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication1.OrdersPage">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<DataGrid Grid.Row="0" Name="dgOrders" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="№ Заказа" Binding="{Binding Id}" />
				<DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate}" />
				<DataGridTextColumn Header="Статус" Binding="{Binding Status}" />
				<DataGridTextColumn Header="Всего товаров" Binding="{Binding TotalItems}" />
				<DataGridTextColumn Header="Позиций" Binding="{Binding ItemsCount}" />

				<DataGridTemplateColumn Header="Действия">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal">
								<Button Content="Детали" Click="btnViewDetails_Click" Tag="{Binding}"/>
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>

		<Button Grid.Row="1" Content="Обновить" x:Name="btnRefresh" Click="btnRefresh_Click"/>
	</Grid>
</UserControl>