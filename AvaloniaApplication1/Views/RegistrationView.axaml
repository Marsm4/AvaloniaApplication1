<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
             x:Class="AvaloniaApplication1.RegistrationView">
  <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto" Margin="10">
    <TextBlock Grid.Row="0">Имя</TextBlock>
    <TextBox Grid.Row="1" x:Name="tbName" Margin="0,0,0,10"/>
    <TextBlock Grid.Row="2">Email</TextBlock>
    <TextBox Grid.Row="3" x:Name="tbEmail" Margin="0,0,0,10"/>
    <TextBlock Grid.Row="4">Пароль</TextBlock>
    <TextBox Grid.Row="5" x:Name="tbPassword" Margin="0,0,0,10"/>
    <TextBlock Grid.Row="6">Подтверждение пароля</TextBlock>
    <TextBox Grid.Row="7" x:Name="tbConfirmPassword" Margin="0,0,0,10"/>

    <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
      <Button Content="Отмена" Click="CancelButton_Click" Background="Red" Padding="20,5"/>
      <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Background="Green" Padding="20,5"/>
    </StackPanel>
  </Grid>
</UserControl>