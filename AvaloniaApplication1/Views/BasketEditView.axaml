

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
             x:Class="AvaloniaApplication1.Views.BasketEditView">
    <Grid RowDefinitions="Auto, Auto, Auto, *" Margin="20">
        <TextBlock Grid.Row="0" Text="Izmenenie kolihestvo" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="1" Text="kolihestvo:"/>
        <TextBox Grid.Row="2" x:Name="tbQuantity" Text="1" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15">
            <Button Content="otmena" Click="CancelButton_Click" Background="Red" Padding="15,5" Foreground="White"/>
            <Button Content="Save" Click="SaveButton_Click" Background="Green" Padding="15,5" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>