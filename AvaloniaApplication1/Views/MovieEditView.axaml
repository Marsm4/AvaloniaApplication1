<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="AvaloniaApplication1.Views.MovieEditView">
	<Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto" Margin="10">
		<TextBlock Grid.Row="0">Название фильма</TextBlock>
		<TextBox Grid.Row="1" x:Name="tbTitle" Margin="0,0,0,10"/>
		<TextBlock Grid.Row="2">Жанр</TextBlock>
		<TextBox Grid.Row="3" x:Name="tbGenre" Margin="0,0,0,10"/>
		<TextBlock Grid.Row="4">Режиссер</TextBlock>
		<TextBox Grid.Row="5" x:Name="tbDirector" Margin="0,0,0,10"/>

		<StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
			<Button Content="Отмена" Click="CancelButton_Click" Background="Red" Padding="20,5"/>
			<Button Content="Сохранить" Click="SaveButton_Click" Background="Yellow" Padding="20,5"/>
		</StackPanel>
	</Grid>
</UserControl>